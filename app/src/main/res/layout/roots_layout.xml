<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_check_roots"
            android:text="Watch roots"
            android:textSize="19sp"
            android:textColor="@color/white_text"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_width="150dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Enter roots:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X1 = "
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/x1_edit_text_roots_layout"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X2 = "
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/x2_edit_text_roots_layout"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X3 = "
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/x3_edit_text_roots_layout"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_roots_activity"
        android:text="Check"
        android:textSize="19sp"
        android:textColor="@color/white_text"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:layout_width="150dp"
        android:layout_height="50dp" />


</LinearLayout>